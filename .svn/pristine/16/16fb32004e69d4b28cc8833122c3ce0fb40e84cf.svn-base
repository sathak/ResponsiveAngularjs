<script id="editor1" type="text/x-kendo-template">
    <h3>Edit meeting</h3>
    <p>
        <label>Title: <input name="title" /></label>
    </p>
    <p>
        <label>Start: <input data-role="datetimepicker" name="start" /></label>
    </p>
    <p>
        <label>End: <input data-role="datetimepicker" name="end" /></label>
    </p>
</script>

<script id="editor2" type="text/x-kendo-template">
    <div class="boxc-col">
        <form role="form" class="form-horizontal">

            <div class="form-group">
                <label class="col-md-3">Start</label>
                <div class="col-md-6">
                    <input kendo-date-picker k-ng-model="dataItem.start" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">End</label>
                <div class="col-md-6">
                    <input kendo-date-picker k-ng-model="dataItem.end" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Comment</label>
                <div class="col-md-7">
                    <textarea data-bind="value:comment" rows="2" cols="25" class="form-control" placeholder="Comment"></textarea>
                </div>
            </div>
        </form>
    </div>
</script>